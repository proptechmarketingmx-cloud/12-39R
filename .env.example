# Copy this file to `.env` and fill values. Do NOT commit secrets.
# Example environment variables for CRM Inmobiliario

# Database
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=crm_inmobiliario
DB_USER=crm_user
DB_PASSWORD=change_me_secure_password
DB_USE_SSL=false

# Application
ENV=development
SECRET_KEY=changeme_generate_secure_random

# Security
BCRYPT_ROUNDS=12
LOGIN_MAX_ATTEMPTS=5
LOCKOUT_DURATION_SECONDS=900

# Logging
LOG_LEVEL=INFO

